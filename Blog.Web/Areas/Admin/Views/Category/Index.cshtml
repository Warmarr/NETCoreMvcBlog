@model List<CategoryDto>
<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Kategori Yönetimi/</span> Kategoriler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-outline-primary mb-3" href="/Admin/Category/Add"> Kategori Ekle <i class="bx bx-plus"></i></a>
            <table id="categoriesTable" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>İSİM</th>
                        <th>OLUŞTURULMA TARİHİ</th>
                        <th>OLUŞTURAN</th>
                        <th>DURUM</th>
                        <th>İŞLEMLER</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İSİM</th>
                        <th>OLUŞTURULMA TARİHİ</th>
                        <th>OLUŞTURAN</th>
                        <th>DURUM</th>
                        <th>İŞLEMLER</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <td>@category.Name</td>
                            <td>@category.CreatedDate.ToShortDateString()</td>
                            <td>@category.CreatedBy</td>
                            <td>@(category.IsDeleted ? "Pasif" : "Aktif")</td>
                            <td>
                                <a class="btn btn-outline-warning btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-articleId="@category.Id">
                                    <i class="bx bxs-edit"></i>
                                </a>
                                <a class="btn btn-outline-danger btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-articleId="@category.Id">
                                    <i class="bx bxs-minus-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>


                <
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

    <hr class="my-5">

</div>
@section Scripts{
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}
