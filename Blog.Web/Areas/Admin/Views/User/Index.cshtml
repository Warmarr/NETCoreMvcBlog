@model List<UserDto>

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Kullanıcı Yönetimi/</span> Kullanıcılar
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-outline-primary mb-3" href="/Admin/User/Add"> Kullanıcı Ekle <i class="bx bx-plus"></i></a>
            <table id="usersTable" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Email Doğrulama</th>
                        <th>Bağlantı Hataları</th>
                        <th>Role</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Email Doğrulama</th>
                        <th>Bağlantı Hataları</th>
                        <th>Role</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@(user.EmailConfirmed ? "Doğrulanmış" : "Doğrulanmamış")</td>
                            <td>@user.AccessFailedCount</td>
                            <td>@user.Role</td>
                            <td>
                                <a class="btn btn-outline-warning btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-categoryId="@user.Id">
                                    <i class="bx bxs-edit"></i>
                                </a>
                                <a class="btn btn-outline-danger btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="user" asp-action="Delete" asp-route-categoryId="@user.Id">
                                    <i class="bx bxs-minus-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>


                <
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

    <hr class="my-5">

</div>
@section Scripts{
    <script src="~/js/userIndex.js" type="application/ecmascript"></script>
}

